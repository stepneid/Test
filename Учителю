Учителю
#include <iostream>
using namespace std;
int main()
{

	setlocale(LC_ALL, "ru");
	int n;
	cout << "Напишите высоту треугольника от 3 до 10: ";
	cin >> n;
	cout << endl;
	for (int i = 3; i <= n;) {
		if(i <= n){
			cout << "         *         "<<endl;
			cout << "        * *        "<<endl;
			cout << "       *   *       "<<endl;
			i++;
		}

		if (i<=n) {
			cout << "      *     *       " << endl;
			i++;
		}
		if (i <= n) {
			cout << "     *       *       " << endl;
			i++;
		}
		if (i <= n) {
			cout << "    *         *       " << endl;
			i++;
		}
		if (i <= n) {
			cout << "   *           *       " << endl;
			i++;
		}
		if (i <= n) {
			cout << "  *             *       " << endl;
			i++;
		}
		if (i <= n) {
			cout << " *               *       " << endl;
			i++;
		}
		if (i <= n) {
			cout << "*                 *       " << endl;
			i++;
		}

		return 0;
	}
	cout << "Ошибка введите число от 3";
}
